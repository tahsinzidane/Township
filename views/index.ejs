    <section id="review" class="mt-5">
        <div class="container">
            <div class="row text-center">
                <h1>
                    <strong> What Our Users Say </strong> <br>
                    <a href="#commentForm">
                        <button id="commentBtn" class="btn btn-warning">Leave a Comment</button>
                    </a>
                </h1>
            </div>
            <div class="row">
                <% reviews.forEach(review=> { %>
                    <div class="col-xxl-4 border rounded shadow">
                        <h2>
                            <%= review.name %>
                        </h2>
                        <p>
                            <%= review.comment %>
                        </p>
                        <ul>
                            <li>
                                <%= review.postedAt ? review.postedAt.toDateString() : 'N/A' %>
                            </li>
                        </ul>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

    <section id="commentForm" class="mt-5" style="display: none; position: sticky; top: 0; z-index: 100;">
