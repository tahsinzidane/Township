    <section id="hero">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div id="imageSlider" class="slider">
                        <% images.forEach((image, index)=> { %>
                            <div class="slide" style="display: none;">
                                <img src="<%= image.path %>" alt="Uploaded Image">
                            </div>
                            <% }); %>
                    </div>
                    <button class="prev" onclick="changeSlide(-1)">&#10094;</button>
                    <button class="next" onclick="changeSlide(1)">&#10095;</button>
                </div>
            </div>
        </div>
    </section>


    <section id="notis" class="mt-5">
        <div class="container bg-light shadow rounded">
            <div class="row">
                <div class="col-xxl-12">


                    <marquee behavior="scroll" direction="left">
                        <% notes.forEach(note=> { %>
                            <strong>Note:</strong>
                            <%= note.content %>
                                <% }); %>
                    </marquee>


                </div>
            </div>
        </div>
    </section>


    <section id="about">
        <div class="container mt-5 ">
            <div class="row bg-light rounded shadow">
                <div class="row text-center">
                    <div class="col-xxl-12">
                        <h1>about <%= brandName %>
                        </h1>
                    </div>
                </div>
                <div class="col-xxl-6">
                    <img src="/img/logo.png" class="img-fluid mt-5" alt="" srcset="">
                </div>
                <div class="col-xxl-6 mt-5">
                    <% notes.forEach(note=> { %>
                        <p class="mt-5 fs-5">
                            <%= note.description %>
                        </p>
                        <% }); %>

                            <button class="bg-warning fs-3 text-white btn">learn more</button>
                </div>
            </div>
        </div>
    </section>


    <section id="partners" class="py-5 bg-light mt-5">
        <div class="container">
            <h2 class="text-center mb-4">আমাদের পার্টনার সমূহ</h2>
            <div class="row">
                <% if (partners.length> 0) { %>
                    <% partners.forEach(partner=> { %>
                        <div class="col-6 col-md-4 col-lg-3 text-center mb-4">
                            <div class="partner-item">
                                <img src="<%= partner.path %>" alt="Partner Image" class="img-fluid rounded"
                                    style="max-width: 150px; height: auto;">
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="col-12 text-center">
