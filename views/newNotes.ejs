<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= brandName %> - New Notes
    </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container my-5 p-4 bg-white shadow rounded">
        <h1 class="text-center mb-4">Add a New Note</h1>

        <!-- Form to add a new note -->
        <form action="/admin/new-notes" method="POST" class="mb-4">
            <div class="mb-3">
                <label for="content" class="form-label">Enter your note:</label>
                <textarea id="content" name="Notes" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Write description:</label>
                <textarea id="description" name="description" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Note</button>
        </form>

        <h2 class="h4">Existing Notes</h2>
        <ul class="list-group mt-3">
            <% notes.forEach(note=> { %>
                <li class="list-group-item">
                    <strong>Note:</strong>
                    <%= note.content %>
                        <p class="mt-2">
                            <strong>Description:</strong>
                            <%= note.description %>
                        </p>

                        <!-- Form to delete the entire note -->
                        <form action="/admin/delete-note" method="POST" class="d-inline">
                            <input type="hidden" name="noteId" value="<%= note._id %>">
                            <button type="submit" class="btn btn-danger btn-sm">Delete Note</button>
                        </form>

                        <!-- Form to clear the description only -->
                        <form action="/admin/delete-description" method="POST" class="d-inline">
                            <input type="hidden" name="noteId" value="<%= note._id %>">
                            <button type="submit" class="btn btn-warning btn-sm">Delete Description</button>
                        </form>
                </li>
                <% }); %>
        </ul>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>